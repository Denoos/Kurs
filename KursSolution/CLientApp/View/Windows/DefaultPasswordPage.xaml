<Window x:Class="CLientApp.View.Windows.DefaultPasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLientApp.View.Windows"
        mc:Ignorable="d"
        Title="DefaultPasswordPage" Height="450" Width="800">
    <Border BorderThickness="10" CornerRadius="10" BorderBrush="{Binding Settings.Color}" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Background="{Binding Settings.Color}" Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Background="White" Padding="15" Margin="20" FontSize="{Binding Settings.FontSize}" Text="Введите ключ доступа!, который был выдан при внедрении системы!" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBox Padding="10,5" Margin="20" Text="{Binding Key}" FontSize="{Binding Settings.FontSize}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button FontSize="{Binding Settings.FontSize}" Content="Применить" Padding="10, 5"  Click="Save_Click" Margin="10"/>
                <Button FontSize="{Binding Settings.FontSize}" Content="Назад" Padding="10, 5" Click="Back_Click" Margin="10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
