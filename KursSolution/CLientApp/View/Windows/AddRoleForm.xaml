<Window x:Class="CLientApp.View.Windows.AddRoleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLientApp.View.Windows"
        mc:Ignorable="d"
        Title="AddRoleForm" Height="300" Width="600">


    <Border BorderThickness="10" CornerRadius="10" BorderBrush="{Binding Settings.Color}" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Background="{Binding Settings.Color}" Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="{Binding Settings.FontSize}" Background="White" Padding="15" Margin="20" Text="Введите название роли, которое будет необычным, поскольку это затруднит взлом!" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBox FontSize="{Binding Settings.FontSize}" Padding="10,5" Margin="20" Text="{Binding Role.Ttle}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button FontSize="{Binding Settings.FontSize}" Content="Сохранить" Padding="10, 5"  Click="Save_Click" Margin="10"/>
                <Button FontSize="{Binding Settings.FontSize}" Content="Назад" Padding="10, 5" Click="Back_Click" Margin="10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
