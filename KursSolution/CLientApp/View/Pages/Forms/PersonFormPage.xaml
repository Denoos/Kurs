<Page x:Class="CLientApp.View.Pages.Forms.PersonFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLientApp.View.Pages.Forms"
                mc:Ignorable="d"
    Title="Сотрудники"
    Background="White">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border BorderThickness="3" Grid.Column="1" BorderBrush="#FF4500" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="30" Padding="20" Background="#FFF5F5F5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
                <TextBlock Text="Сотрудники" FontSize="24" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Имя" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox 
                        Text="{Binding Item.Name}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                
                <TextBlock Text="Фамилия" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox  IsEnabled="{Binding IsEnabled}"
                        Text="{Binding Item.Surname}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                
                <TextBlock Text="Отчество" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox 
                        Text="{Binding Item.Patronymic}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                
                <TextBlock Text="Должность" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox IsEnabled="False"
                        Text="{Binding Item.Post.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                
                <TextBlock Text="Статус" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox IsEnabled="False"
                        Text="{Binding Item.Status.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>

                <ComboBox x:Name="Postus" DisplayMemberPath="Title" IsEnabled="{Binding IsEnabled}" ItemsSource="{Binding Items}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Post, Mode=TwoWay}" />
                
                <ComboBox x:Name="Statusus" DisplayMemberPath="Title" IsEnabled="{Binding IsEnabled}" ItemsSource="{Binding ItemsSecond}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Status, Mode=TwoWay}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Сохранить" IsEnabled="{Binding IsEnabled}"
                            FontSize="18"
                            Width="200" 
                            Height="40" 
                            Background="#FF4500" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Click="Save_Click"
                            />

                    <Button Content="Назад"
                            Click="Exit_Click"
                            Width="230"
                            FontSize="18"
                            Height="40" 
                            Background="#FF4500" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Margin="10,0,0,0" 
                            />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>