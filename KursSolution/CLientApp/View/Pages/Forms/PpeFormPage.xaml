<Page x:Class="CLientApp.View.Pages.Forms.PpeFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLientApp.View.Pages.Forms"
          mc:Ignorable="d"
    Title="СИЗ"
    Background="White">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border BorderThickness="3" Grid.Column="1" BorderBrush="#FF4500" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="30" Padding="20" Background="#FFF5F5F5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
                <TextBlock Text="СИЗ" FontSize="24" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Название" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox Name="UsernameTextBox" 
                         Text="{Binding Item.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                <TextBlock Text="Инвентарный номер" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox
                         Text="{Binding Item.InventoryNumber}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>

                <TextBlock Text="Состояние" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <ComboBox ItemsSource="{Binding Items}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Condition}" />
                <TextBlock Text="Тип" FontSize="18" FontWeight="Bold" Foreground="#FF4500" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <ComboBox ItemsSource="{Binding ItemsSecond}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Type}" />

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="30, 5">
                        <TextBlock Text="Дата получения" FontSize="16" FontWeight="Bold" Foreground="#FF4500"/>
                        <DatePicker SelectedDate="{Binding Item.DateGet}" Height="40"/>
                    </StackPanel>
                    <StackPanel Margin="30, 5" >
                        <TextBlock Text="Дата окончания" FontSize="16" FontWeight="Bold" Foreground="#FF4500"/>
                        <DatePicker SelectedDate="{Binding Item.DateEnd}" Height="40"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button Content="Сохранить" 
                            FontSize="18"
                            Click="Save_Click"
                            Width="200" 
                            Height="40" 
                            Background="#FF4500" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            />

                    <Button Content="Назад" 
                            Width="230"
                            FontSize="18"
                            Click="Exit_Click"
                            Height="40" 
                            Background="#FF4500" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Margin="10,0,0,0" 
                            />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>