<Page x:Class="CLientApp.View.Pages.Forms.PpeFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLientApp.View.Pages.Forms"
          mc:Ignorable="d"
    Title="СИЗ"
    Background="White">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Width="Auto" BorderThickness="3" Grid.Column="1" BorderBrush="{Binding Settings.Color}" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="30" Padding="20" Background="#FFF5F5F5" Margin="-10,0,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="СИЗ" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Название" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox IsEnabled="{Binding IsEnabled}" Name="UsernameTextBox" 
                         Text="{Binding Item.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                <TextBlock Text="Инвентарный номер" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>
                <TextBox IsEnabled="{Binding IsEnabled}"
                         Text="{Binding Item.InventoryNumber}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>

                <TextBlock Text="Состояние" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox Width="500" IsEnabled="False"
                         Text="{Binding Item.Condition.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                    <ComboBox x:Name="Conditionus" MinWidth="300" DisplayMemberPath="Title"   IsEnabled="{Binding IsEnabled}" ItemsSource="{Binding Items}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Condition, Mode=TwoWay}" />
                </StackPanel>

                <TextBlock Text="Тип" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                           HorizontalAlignment="Left" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal">
                    <TextBox Width="500" IsEnabled="False"
                         Text="{Binding Item.Type.Title}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                    <ComboBox x:Name="Typus" MinWidth="300" DisplayMemberPath="Title"  IsEnabled="{Binding IsEnabled}" ItemsSource="{Binding ItemsSecond}" Margin="20, 10" Height="40" SelectedItem="{Binding Item.Type, Mode=TwoWay}" />
                </StackPanel>

                <TextBlock Text="Ответственный" FontSize="{Binding Settings.FontSize}" FontWeight="Bold" Foreground="{Binding Settings.Color}" 
                    HorizontalAlignment="Left" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal">
                    <Label Width="500" IsEnabled="False"
                         Content="{Binding SelectPerson.AllToString}"
                         Margin="0,0,0,10" 
                         Height="40" 
                         FontSize="16" 
                         Padding="5"/>
                    <ComboBox x:Name="Resp" MinWidth="300" IsEnabled="{Binding IsEnabled}" DisplayMemberPath="AllToString" ItemsSource="{Binding ItemsThird}" Margin="20, 10" Height="40" SelectedItem="{Binding SelectPerson}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="30, 5">
                        <TextBlock Text="Дата получения" FontSize="16" FontWeight="Bold" Foreground="{Binding Settings.Color}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="getDate" Width="500" IsEnabled="False"
                                 Text="{Binding Item.DateGet}"
                                 Margin="0,2,0,10" 
                                 Height="40" 
                                 FontSize="16" 
                                 Padding="5"/>
                            <DatePicker x:Name="GetDate" SelectedDateChanged="GetDateChanged" IsEnabled="{Binding IsEnabled}" SelectedDate="{Binding Item.DateGet}" Margin="20, 0, 0, 5" Height="40"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="30, 5">
                        <TextBlock Text="Дата окончания" FontSize="16" FontWeight="Bold" Foreground="{Binding Settings.Color}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="endDate" Width="500" IsEnabled="False"
                                 Text="{Binding Item.DateEnd}"
                                 Margin="0,2,0,10" 
                                 Height="40" 
                                 FontSize="16" 
                                 Padding="5"/>
                            <DatePicker x:Name="EndDate" SelectedDateChanged="EndDateChanged" IsEnabled="{Binding IsEnabled}" SelectedDate="{Binding Item.DateEnd}" Margin="20, 0, 0, 5" Height="40"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button IsEnabled="{Binding IsEnabled}" Content="Сохранить" 
                            FontSize="{Binding Settings.FontSize}"
                            Click="Save_Click"
                            Width="200" 
                            Height="40" 
                            Background="{Binding Settings.Color}" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            />

                    <Button Content="Назад" 
                            Width="230"
                            FontSize="{Binding Settings.FontSize}"
                            Click="Exit_Click"
                            Height="40" 
                            Background="{Binding Settings.Color}" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Margin="10,0,0,0" 
                            />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>